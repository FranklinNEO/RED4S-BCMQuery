<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"    
    android:background="#f3f3f3">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width = "fill_parent"
              android:layout_height="48.0dip"
              android:gravity="left|center_vertical"
              android:background="@drawable/top_bg" >
                            
              <TextView style="@style/TitleBarText" 
              android:text="@string/app_name" 
              android:paddingLeft="8dip"/>
               
    <ImageView android:layout_width="1px"
               android:layout_height="fill_parent"
               android:background="@drawable/separator"
               android:layout_marginLeft="5dip"
               android:layout_marginRight="7dip"/>
               <ImageButton style="@style/TitleBarOperation"
                           android:src="@drawable/about_click"
                           android:background="@null"
                           android:onClick="onAbout" android:layout_marginTop="3dip" android:layout_marginRight="3dip"/>
    </LinearLayout> 
    <GridView
        android:id="@+id/main_grid_menu"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:numColumns="auto_fit"
        android:verticalSpacing="8dip"
        android:horizontalSpacing="8dip"
        android:layout_margin="8dip"
        android:columnWidth="96dip"
        android:stretchMode="columnWidth">
    
    </GridView>

</LinearLayout>
